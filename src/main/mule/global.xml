	<error-handler name="Global_Error_Handler">
    <on-error-propagate type="ANY">
        <logger level="ERROR" doc:name="Log Error Details" message="An error occurred: #[error.description]"/>
        <choice>
            <!-- Check for specific error types -->
            <when expression="#[error.causedBy(com.mulesoft.module.client.exception.RateLimitExceededException)]">
                <logger level="ERROR" doc:name="Log Rate Limit Exceeded" message="Rate limit exceeded: #[error.description]"/>
                <!-- Additional handling specific to RateLimitExceededException -->
                <!-- Example: Send a notification to system administrators -->
            </when>
            <!-- Add more 'when' conditions for specific error types -->
            <!-- For unhandled exceptions -->
            <otherwise>
                <ee:transform doc:name="Transform Message" doc:id="7c7ef309-02ba-4d6a-ae13-3097bc4c9ac5">
						<ee:message>
							<ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
	result : false,
	message : error.description
}]]></ee:set-payload>
						</ee:message>
					</ee:transform>
					<logger level="ERROR" doc:name="Log Unhandled Error" message="Unhandled error occurred: #[error.description]"/>
                <!-- Example: Notify support team or trigger a workflow for unhandled errors -->
            
</otherwise>
        </choice>
    </on-error-propagate>
</error-handler>
	
	
</mule>
